{
  "name": "@mixor/openapi",
  "version": "1.0.0",
  "description": "Mixor OpenAPI implementation",
  "author": "Carlos Cosming",
  "license": "MIT",
  "keywords": [
    "openapi",
    "api",
    "rest",
    "http",
    "server"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "moonx build -s -u",
    "format": "moonx format",
    "format-fix": "moonx format-fix",
    "lint": "moonx lint",
    "lint-fix": "moonx lint-fix",
    "test": "moonx test -s -u",
    "test-project": "moonx test-project",
    "publish-local": "pnpm build && pnpm publish --registry=http://localhost:4873 --no-git-checks --force",
    "unpublish-local": "npm unpublish --registry=http://localhost:4873/ --force",
    "republish-local": "pnpm unpublish-local && pnpm publish-local",
    "dev": "node --watch --import tsx --conditions development"
  },
  "dependencies": {
    "@mixor/core": "workspace:*",
    "@mixor/values": "workspace:*",
    "@standard-schema/spec": "^1.0.0",
    "hono-openapi": "^0.4.8"
  },
  "devDependencies": {
    "@nuxo/tsup": "^1.0.0",
    "@nuxo/vitest": "^1.0.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "rimraf": "^6.0.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "vitest": "^3.1.4"
  }
}
